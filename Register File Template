<?php
        /**
        * Plugin Name: Offcial Widget Name
        * Description: The description will appear on WP admin panel 
        * Plugin URI:  https://elementor.com/
        * Version:     1.0.0
        * Author:      Developer Name
        * Author URI:  https://developers.elementor.com/
        * Text Domain: register_file_name
        *
        * Elementor tested up to: 3.3.0
        * Elementor Pro tested up to: 3.3.0
        */
    if ( ! defined( 'ABSPATH' ) ) {
        exit; // Exit if accessed directly.
    }

    function register_widgets_file_name( $widgets_manager ) {

	require_once( __DIR__ . '/widgets/widget1_file_name.php' );
	require_once( __DIR__ . '/widgets/widget2_file_name.php' );

	$widgets_manager->register( new \widget1_file_name() );
	$widgets_manager->register( new \widget2_file_name() );

}
add_action( 'elementor/widgets/register', 'register_widgets_file_name' );
